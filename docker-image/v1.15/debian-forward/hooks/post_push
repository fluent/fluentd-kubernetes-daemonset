#!/usr/bin/env bash
# AUTOMATICALLY GENERATED
# DO NOT EDIT THIS FILE DIRECTLY, USE /templates/post_push.erb

set -e

# Parse image name for repo name
tagStart=$(expr index "$IMAGE_NAME" :)
repoName=${IMAGE_NAME:0:tagStart-1}

# Download manifest tool
curl -Lo manifest-tool https://github.com/estesp/manifest-tool/releases/download/v1.0.3/manifest-tool-linux-amd64
chmod +x manifest-tool

# Tag and push image and manifest list for each additional tag
for tag in {v1.15.3-debian-forward-amd64-1.1,v1.15-debian-forward-amd64-1}; do
  docker tag $IMAGE_NAME ${repoName}:${tag}
  docker push ${repoName}:${tag}
  # Note: this will fail until both the amd64 and arm64 images have been pushed
  archTag=${tag/amd64/ARCH}
  archTag=${archTag/arm64/ARCH}
  noArchTag=${tag/-amd64/}
  noArchTag=${noArchTag/-arm64/}
  # Accept manifest-tool command failure.
  ./manifest-tool push from-args \
      --platforms linux/amd64,linux/arm64 \
      --template ${repoName}:${archTag} \
      --target ${repoName}:${noArchTag} || true
done
